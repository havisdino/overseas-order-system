<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="700.0" prefWidth="1000.0" spacing="20.0" style="-fx-background-color: #ffffff;" styleClass="rounded-corner" stylesheets="@../../../style/stylesheet.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontend.controllers.oopdept.orderhandling.OrderHandlingController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="30.0" />
   </padding>
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label styleClass="heading" text="Order handling" />
         </children>
      </HBox>
      <Label styleClass="title" text="General information" />
      <HBox spacing="20.0" styleClass="info-box">
         <children>
            <VBox spacing="5.0">
               <children>
                  <Label styleClass="normal-text" text="Order ID:" />
                  <Label layoutX="10.0" layoutY="10.0" styleClass="normal-text" text="Sales department ID:" />
                  <Label layoutX="10.0" layoutY="44.0" styleClass="normal-text" text="Date created:" />
                  <Label layoutX="10.0" layoutY="58.0" styleClass="normal-text" text="Description:" />
               </children>
            </VBox>
            <VBox layoutX="10.0" layoutY="10.0" spacing="5.0">
               <children>
                  <Label fx:id="orderIDLabel" styleClass="normal-text" text="HIEWBT" wrapText="true" />
                  <Label fx:id="salesDepartmentIDLabel" layoutX="10.0" layoutY="10.0" styleClass="normal-text" text="HIEWSATTHU" wrapText="true" />
                  <Label fx:id="dateLabel" layoutX="10.0" layoutY="44.0" styleClass="normal-text" text="10/18/2024" wrapText="true" />
                  <Label fx:id="descLabel" layoutX="10.0" layoutY="58.0" styleClass="normal-text" text="From Hiew" wrapText="true" />
               </children>
            </VBox>
         </children>
      </HBox>
      <Label layoutX="30.0" layoutY="91.0" styleClass="title" text="Merchandise list" />
      <VBox VBox.vgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER_LEFT" minHeight="-Infinity" minWidth="-Infinity" spacing="20.0" style="-fx-background-color: white;" styleClass="rounded-corner">
               <children>
                  <Label prefWidth="150.0" styleClass="normal-text" text="Merchandise Code" wrapText="true" HBox.hgrow="ALWAYS" />
                  <Label prefWidth="150.0" styleClass="normal-text" text="Name" wrapText="true" />
                  <Label layoutX="30.0" layoutY="30.0" prefWidth="100.0" styleClass="normal-text" text="Quantity" wrapText="true" HBox.hgrow="ALWAYS" />
                  <Label layoutX="231.0" layoutY="30.0" prefWidth="100.0" styleClass="normal-text" text="Unit" />
                  <Label layoutX="501.0" layoutY="20.0" prefWidth="100.0" styleClass="normal-text" text="Status" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="31.0" right="30.0" top="10.0" />
               </padding>
            </HBox>
            <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: white;" VBox.vgrow="ALWAYS">
               <content>
                  <VBox fx:id="mainVBox" alignment="TOP_CENTER" spacing="10.0" style="-fx-background-color: -color-back;" styleClass="rounded-corner">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
      </VBox>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#cancelButtonClicked" styleClass="dangerous-button" text="Cancel order" />
            <Button layoutX="711.0" layoutY="10.0" mnemonicParsing="false" onAction="#placeButtonClicked" style="-fx-text-fill: -color-accent-6;" text="Place" />
         </children>
      </HBox>
   </children>
</VBox>
