<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" spacing="20.0" style="-fx-background-color: #ffffff;" styleClass="rounded-corner" stylesheets="@../../style/stylesheet.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontend.controllers.warehouse.NewOrderCheckController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="30.0" />
   </padding>
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label styleClass="heading" text="New order check" />
         </children>
      </HBox>
      <Label styleClass="title" text="General information" />
      <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="info-box">
         <children>
            <Label styleClass="normal-text" text="Order ID" />
            <TextField fx:id="orderIDField" />
         </children>
      </HBox>
      <Label styleClass="title" text="Add merchandises" />
      <VBox VBox.vgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER_LEFT" minHeight="-Infinity" minWidth="-Infinity" spacing="20.0" style="-fx-background-color: white;" styleClass="rounded-corner">
               <children>
                  <Label prefWidth="150.0" styleClass="normal-text" text="Merchandise Code" wrapText="true" HBox.hgrow="ALWAYS" />
                  <Label prefWidth="150.0" styleClass="normal-text" text="Name" wrapText="true" />
                  <Label layoutX="30.0" layoutY="30.0" prefWidth="100.0" styleClass="normal-text" text="Quantity" wrapText="true" HBox.hgrow="ALWAYS" />
                  <Label layoutX="231.0" layoutY="30.0" prefWidth="100.0" styleClass="normal-text" text="Unit" />
                  <HBox alignment="CENTER" spacing="20.0" HBox.hgrow="ALWAYS">
                     <padding>
                        <Insets left="50.0" />
                     </padding>
                     <children>
                        <Label styleClass="normal-text" text="Action" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
               </padding>
            </HBox>
            <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: white;" VBox.vgrow="ALWAYS">
               <content>
                  <VBox fx:id="mainVBox" alignment="TOP_CENTER" spacing="10.0" style="-fx-background-color: -color-back;" styleClass="rounded-corner">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
      </VBox>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#discardButtonClicked" style="-fx-text-fill: -color-danger-7;" text="Discard" />
            <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#doneButtonClicked" styleClass="blue-button" text="Done" />
         </children>
      </HBox>
   </children>
</VBox>
