<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<HBox alignment="CENTER_LEFT" minHeight="-Infinity" minWidth="-Infinity" spacing="20.0" style="-fx-background-color: white;" styleClass="rounded-corner" stylesheets="@../../../style/stylesheet.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.oopdept.orderhandling.SiteTagController">
   <children>
      <Label fx:id="siteCodeLabel" prefWidth="150.0" styleClass="normal-text" text="HOANGBANKEO" wrapText="true" HBox.hgrow="ALWAYS" />
      <Label fx:id="nameLabel" prefWidth="150.0" styleClass="normal-text" text="Hoang's site" wrapText="true" />
      <Label fx:id="quantityLabel" layoutX="30.0" layoutY="30.0" prefWidth="120.0" styleClass="normal-text" text="18" wrapText="true" HBox.hgrow="ALWAYS" />
      <TextField fx:id="requestQuantityField" prefWidth="70.0">
         <HBox.margin>
            <Insets right="50.0" />
         </HBox.margin>
      </TextField>
      <VBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
         <children>
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#addButtonClicked" style="-fx-text-fill: -color-accent-6;" text="Add" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
   </padding>
</HBox>
