<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox prefHeight="600.0" spacing="20.0" style="-fx-background-color: #ffffff;" styleClass="rounded-corner" stylesheets="@../../style/stylesheet.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontend.controllers.site.RequestDetailController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="30.0" />
   </padding>
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label styleClass="heading" text="Request details" />
         </children>
      </HBox>
      <Label styleClass="title" text="General information" />
      <VBox styleClass="info-box">
         <children>
            <HBox spacing="20.0">
               <children>
                  <VBox spacing="5.0">
                     <children>
                        <Label styleClass="normal-text" text="Order ID:" />
                        <Label layoutX="10.0" layoutY="10.0" styleClass="normal-text" text="OOPD ID:" />
                        <Label layoutX="10.0" layoutY="27.0" styleClass="normal-text" text="Description:" />
                        <Label layoutX="10.0" layoutY="44.0" styleClass="normal-text" text="Desired delivery date:" />
                     </children>
                  </VBox>
                  <VBox layoutX="10.0" layoutY="10.0" spacing="5.0">
                     <children>
                        <Label fx:id="orderIDLabel" styleClass="normal-text" text="GIAANH2K3" wrapText="true" />
                        <Label fx:id="oopdIDLabel" layoutX="10.0" layoutY="10.0" styleClass="normal-text" text="HGA" wrapText="true" />
                        <Label fx:id="descriptionLabel" layoutX="10.0" layoutY="27.0" styleClass="normal-text" text="This is a request from HGA" wrapText="true" />
                        <Label fx:id="desiredDateLabel" layoutX="10.0" layoutY="44.0" styleClass="normal-text" text="10/18/2024" wrapText="true" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
      <Label layoutX="30.0" layoutY="91.0" styleClass="title" text="Merchandise list" />
      <VBox VBox.vgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER_LEFT" minHeight="-Infinity" minWidth="-Infinity" spacing="20.0" style="-fx-background-color: white;" styleClass="rounded-corner">
               <children>
                  <Label prefWidth="150.0" styleClass="normal-text" text="Merchandise Code" wrapText="true" HBox.hgrow="ALWAYS" />
                  <Label prefWidth="150.0" styleClass="normal-text" text="Name" wrapText="true" />
                  <Label layoutX="30.0" layoutY="30.0" prefWidth="100.0" styleClass="normal-text" text="Quantity" wrapText="true" HBox.hgrow="ALWAYS" />
                  <Label layoutX="231.0" layoutY="30.0" prefWidth="100.0" styleClass="normal-text" text="Unit" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
               </padding>
            </HBox>
            <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: white;" VBox.vgrow="ALWAYS">
               <content>
                  <VBox alignment="TOP_CENTER" spacing="10.0" style="-fx-background-color: -color-back;" styleClass="rounded-corner">
                     <children>
                        <HBox alignment="CENTER_LEFT" minHeight="-Infinity" minWidth="-Infinity" spacing="20.0" style="-fx-background-color: white;" styleClass="rounded-corner">
                           <children>
                              <Label prefWidth="150.0" styleClass="normal-text" text="KEO502" wrapText="true" HBox.hgrow="ALWAYS" />
                              <Label prefWidth="150.0" styleClass="normal-text" text="Super glue" wrapText="true" />
                              <Label layoutX="30.0" layoutY="30.0" prefWidth="100.0" styleClass="normal-text" text="10" wrapText="true" HBox.hgrow="ALWAYS" />
                              <Label layoutX="231.0" layoutY="30.0" prefWidth="100.0" styleClass="normal-text" text="Tube" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                           </padding>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
      </VBox>
      <HBox alignment="CENTER_RIGHT">
         <children>
            <Button mnemonicParsing="false" onAction="#closeButtonClicked" text="Close" />
         </children>
      </HBox>
   </children>
</VBox>
